{
	"name": "hypixel-guild-chat-ts",
	"version": "1.0.0",
	"main": "dist",
	"author": "EvernoteMC/xMdb",
	"license": "MIT",
	"private": false,
	"scripts": {
		"lint": "eslint \"src/**\"",
		"lint:fix": "yarn lint --fix",
		"format": "prettier --write \"src/**\"",
		"prepare": "husky install",
		"dev": "ts-node-dev --respawn --transpile-only --poll ./src/index.ts",
		"dev:server": "ts-node-dev --respawn --transpile-only --poll ./src/api/app.ts",
		"start": "node ."
	},
	"dependencies": {
		"consola": "^2.15.3",
		"discord.js": "^13.3.1",
		"dotenv": "^10.0.0",
		"fastify": "^3.24.0",
		"limiter": "^2.1.0",
		"mineflayer": "^3.11.2",
		"ts-node-dev": "^1.1.8"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^5.4.0",
		"@typescript-eslint/parser": "^5.4.0",
		"eslint": "^8.3.0",
		"eslint-config-prettier": "^8.3.0",
		"husky": "^7.0.4",
		"lint-staged": "^12.1.2",
		"prettier": "^2.4.1",
		"typescript": "^4.5.2"
	},
	"engines": {
		"node": ">=16.6.0"
	},
	"lint-staged": {
		"*.ts": [
			"yarn lint",
			"yarn format"
		]
	}
}
